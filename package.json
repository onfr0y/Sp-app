{
  "name": "sp-app",
  "version": "1.0.0",
  "description": "Full-stack social media application with React frontend and Node.js/Express backend.",
  "main": "back-end/index.js",
  "type": "module",
  "scripts": {
    "start": "node back-end/index.js",
    "dev": "nodemon back-end/index.js",
    "heroku-postbuild": "npm run build",
    "build": "npm install && cd front-end && npm install && npm run build && npm run copy-frontend",
    "copy-frontend": "rm -rf back-end/public && mkdir -p back-end/public && cp -R front-end/dist/* back-end/public/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onfr0y/Sp-app.git"
  },
  "keywords": [
    "react",
    "express",
    "node",
    "mongodb",
    "social-media"
  ],
  "author": "onfr0y",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/onfr0y/Sp-app/issues"
  },
  "homepage": "https://github.com/onfr0y/Sp-app#readme",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "datauri": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "path": "^0.12.7",
    "sharp": "^0.34.1"
  },
  "devDependencies": {
    "jshint": "^2.13.6",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
